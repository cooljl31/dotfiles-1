[color]
    ui = auto
[alias]
    st = status
    ci = commit
    co = checkout
    com = !git checkout master && git fetch && git status
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    head = !git l -1
    h = !git head
    hp = "!show_git_head"
    r = !git l -30
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    l = "!pretty_git_log"
    la = !git l --all
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    unadd = reset HEAD
    merged = branch --merged
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
    s = !git fetch && git status
    edit-branch-commits = !git rebase -i `git outgoing master | tail -1 | xargs git log --format="%P" -1`
    ss = local-to-remote-status
    pu = push -u

    ; data analysis
    authors = !git log --format="%aN"
    unique-authors = !git authors | sort -u
    ranked-authors = !git authors | sort | uniq -c | sort -n
    emails = !git log --format="%aE"
    email-domains = !git log --format="%aE" | awk -F'@' '{print $2}'
    unique-email-domains = !git email-domains | sort -u
    ranked-email-domains = !git email-domains | sort | uniq -c | sort -n
[merge]
    tool = vimdiff

[core]
	editor = vim
	pager = less -r
[push]
	default = tracking
[advice]
	statusHints = false
[diff]
	mnemonicprefix = true
	algorithm = patience
[format]
    subjectprefix = git

[rerere]
	enabled = 1
